Vagrant.configure("2") do |config|
  config.vm.box = "BaseBox-lleo/UbuntuServer24-04"
  config.vm.box_version = "1"


  config.vm.provider "virtualbox" do |vb|
    vb.name = "ubuntu-2204"
    vb.memory = 2048
    vb.cpus = 2
  end

  # Configurar Vagrant para usar el usuario bob y su contrase√±a
  config.ssh.username = "bob"
  config.ssh.password = "ciber"
  config.ssh.insert_key = false  # No reemplazar claves SSH del usuario

